<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Sample Tests Suite">

    <listeners>
        <listener class-name="gr.qa.helperClasses.listeners.TestListener"/>
    </listeners>

    <!-- Staging or production run-->
    <parameter name="environment" value="production"/>
    <!--parameter name="environment" value="staging"/-->

    <test name="Initialize and Tear Down of the web driver">
        <classes>
            <class name="com.helpers.InitTearDownDriver"/>
        </classes>
    </test>
    <test name="Heroku App Tests">
        <packages>
            <package name="com.tests.herokuApp"/>
        </packages>
    </test>
    <test name="Annotated Tests">
        <packages>
            <package name="com.tests.usefulActions.annotated"/>
        </packages>
    </test>
    <test name="Working on -">
        <classes>
            <class name="com.tests.herokuApp.HoverTest"/>
        </classes>
    </test>
</suite>
